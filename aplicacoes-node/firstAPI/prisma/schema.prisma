model User {
    id         String   @id @default(uuid())
    name       String
    email      String
    password   String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
    Access     Access?  @relation(fields: [accessId], references: [id])
    accessId   String?
}

model Access {
    id         String   @id @default(uuid())
    name       String @unique 
    user       User[]
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}

model Product {
    id         String   @id @default(uuid())
    name       String
    price      String
    amount     Int
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
    Store      Store?   @relation(fields: [storeId], references: [id])
    storeId    String?
}

model Store {
    id      String    @id @default(uuid())
    name    String
    Product Product[]
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}
